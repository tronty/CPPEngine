<Rule Name="V2" Body="	Align(SIDE_FACE_X,  100, V11) 
			Align(SIDE_FACE_Y,  100, V11) 
			Align(SIDE_FACE_Z,  100, V11) 
			Align(SIDE_FACE_NX, 100, V11) 
