<Rule Name="H11" Body="Split(Y,[33%:34%:33%],[BlackQuad:WhiteQuad:BlackQuad])" />
<Rule Name="H12" Body="Split(X,[33%:34%:33%],[WhiteQuad:BlackQuad:WhiteQuad])" />
