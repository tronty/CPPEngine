<Panel visible     = "false"
       name        = "Main Frame">
  
  <Font path = "/NSGUI/ArialSmall.tga" />
  
  <Panel name        = "User Controls"
         layout      = "YAXIS"
         anchorPoint = "CORNERRU"> 
         
    <Position    x = "-10" y = "10"/>
    <Interval    y = "2" x = "2" />

    <TabbedPanel callbackString = "tp">
      <TabButtonsBordersColor  x = "50" g = "50" b = "50" />
      <TabButtonsColor         x = "255" g = "180" b = "40" />
      <BordersColor            x = "216" y = "169" z =  "0" />
      <BGColor                 x =  "50" y =  "50" z = "50" />

      <Panel name           = "Render"
             layout         = "YAXIS">

         <RadioButton callbackString = "fBm"
                   checked        = "true">
           <Text string = "fBm" />
         </RadioButton>

         <RadioButton callbackString = "turbulence"
                   checked        = "false">
           <Text string = "turbulence" />
         </RadioButton>

      </Panel>

      <Panel name           = "Shape"
             layout         = "YAXIS">

         <RadioButton callbackString = "sphere"
                   checked        = "true">
           <Text string = "sphere" />
         </RadioButton>

         <RadioButton callbackString = "box"
                   checked        = "false">
           <Text string = "box" />
         </RadioButton>

      </Panel>

      <Panel name           = "Texture"
             layout         = "YAXIS">

         <RadioButton callbackString = "explosion"
                   checked        = "true">
           <Text string = "explosion" />
         </RadioButton>

         <RadioButton callbackString = "fireBase"
                   checked        = "false">
           <Text string = "fireBase" />
         </RadioButton>

         <RadioButton callbackString = "FireTransferFunction"
                   checked        = "false">
           <Text string = "FireTransferFunction" />
         </RadioButton>

         <RadioButton callbackString = "FirePalette"
                   checked        = "false">
           <Text string = "FirePalette" />
         </RadioButton>

         <RadioButton callbackString = "fire_gradient3"
                   checked        = "false">
           <Text string = "fire_gradient3" />
         </RadioButton>

         <RadioButton callbackString = "FireGrade"
                   checked        = "false">
           <Text string = "FireGrade" />
         </RadioButton>

         <RadioButton callbackString = "Spectrum"
                   checked        = "false">
           <Text string = "Spectrum" />
         </RadioButton>

      </Panel>
      <Panel name           = "Shader"
             layout         = "YAXIS"> 
         <RadioButton callbackString = "Simple"
                   checked        = "true">
           <Text string = "Simple" />
         </RadioButton>
         <RadioButton callbackString = "vnoise"
                   checked        = "false">
           <Text string = "vnoise" />
         </RadioButton>
      </Panel>
  
    </TabbedPanel>
  </Panel>
</Panel>
