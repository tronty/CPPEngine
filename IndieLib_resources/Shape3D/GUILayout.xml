<Panel visible     = "false"
       name        = "Main Frame">
  
  <Font path = "/NSGUI/ArialSmall.tga" />
  
  <Panel name        = "User Controls"
         layout      = "YAXIS"
         anchorPoint = "CORNERRU"> 
         
    <Position    x = "-10" y = "10"/>
    <Interval    y = "2" x = "2" />

    <TabbedPanel callbackString = "tp">
      <TabButtonsBordersColor  x = "50" g = "50" b = "50" />
      <TabButtonsColor         x = "255" g = "180" b = "40" />
      <BordersColor            x = "216" y = "169" z =  "0" />
      <BGColor                 x =  "50" y =  "50" z = "50" />

      <Panel name           = "Render"
             layout         = "YAXIS">

         <RadioButton callbackString = "TexturedBox"
                   checked        = "true">
           <Text string = "TexturedBox" />
         </RadioButton>

         <RadioButton callbackString = "Box"
                   checked        = "false">
           <Text string = "Box" />
         </RadioButton>

         <RadioButton callbackString = "Cylinder"
                   checked        = "false">
           <Text string = "Cylinder" />
         </RadioButton>

         <RadioButton callbackString = "Sphere"
                   checked        = "false">
           <Text string = "Sphere" />
         </RadioButton>

         <RadioButton callbackString = "HalfSphere"
                   checked        = "false">
           <Text string = "HalfSphere" />
         </RadioButton>


         <RadioButton callbackString = "Octa"
                   checked        = "false">
           <Text string = "Octa" />
         </RadioButton>
         <RadioButton callbackString = "Tetra"
                   checked        = "false">
           <Text string = "Tetra" />
         </RadioButton>
         <RadioButton callbackString = "Ellipsoid"
                   checked        = "false">
           <Text string = "Ellipsoid" />
         </RadioButton>

         <RadioButton callbackString = "Cone"
                   checked        = "false">
           <Text string = "Cone" />
         </RadioButton>
         <RadioButton callbackString = "Hemis"
                   checked        = "false">
           <Text string = "Hemis" />
         </RadioButton>
         <RadioButton callbackString = "Torus"
                   checked        = "false">
           <Text string = "Torus" />
         </RadioButton>

      </Panel>
  
    </TabbedPanel>
  </Panel>
</Panel>
