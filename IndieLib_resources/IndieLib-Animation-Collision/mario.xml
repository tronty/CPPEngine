<?xml version="1.0" encoding="utf-8"?>
<animation>
	<!-- frames declaration -->
	<frames>	
		<frame name="Mario_Stand"  file="MiniMario_Stand001.png" collision="mario_collisions.xml"/>
		<frame name="Mario_walk01" file="MiniMario_Walk001.png" offset_x="0" offset_y="0" collision="mario_collisions.xml"/>
		<frame name="Mario_walk02" file="MiniMario_Walk002.png" offset_x="0" offset_y="0" collision="mario_collisions.xml"/>
		<frame name="Mario_walk03" file="MiniMario_Walk003.png" offset_x="0" offset_y="0" collision="mario_collisions.xml"/>
		<frame name="Mario_jump"   file="MiniMario_Jump001.png" collision="mario_collisions.xml"/>
	</frames>
		
	<!-- sequences declaration -->
	<sequences>
		<sequence name="mario_walk">
			<frame name="Mario_walk01" time="75" />
			<frame name="Mario_walk02" time="75" />
			<frame name="Mario_walk03" time="75" />
		</sequence>			
		<sequence name="mario_stand">
			<frame name="Mario_Stand" time="150" />
		</sequence>	
		<sequence name="Mario_jump">
			<frame name="Mario_jump" time="150" />
		</sequence>
	</sequences>
</animation>
