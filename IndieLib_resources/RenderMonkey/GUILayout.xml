<Panel visible     = "false"
       name        = "Main Frame">
  
  <Font path = "/NSGUI/ArialSmall.tga" />
  
  <Panel name        = "User Controls"
         layout      = "YAXIS"
         anchorPoint = "CORNERRU"> 
         
    <Position    x = "-10" y = "10"/>
    <Interval    y = "2" x = "2" />

    <TabbedPanel callbackString = "tp">
      <TabButtonsBordersColor  x = "50" g = "50" b = "50" />
      <TabButtonsColor         x = "255" g = "180" b = "40" />
      <BordersColor            x = "216" y = "169" z =  "0" />
      <BGColor                 x =  "50" y =  "50" z = "50" />

      <Panel name           = "Render"
             layout         = "YAXIS">

         <RadioButton callbackString = "Quad"
                   checked        = "false">
           <Text string = "Quad" />
         </RadioButton>

         <RadioButton callbackString = "Box"
                   checked        = "false">
           <Text string = "Box" />
         </RadioButton>

         <RadioButton callbackString = "Sphere"
                   checked        = "true">
           <Text string = "Sphere" />
         </RadioButton>

      </Panel>

      <Panel name           = "Shader"
             layout         = "YAXIS">

         <RadioButton callbackString = "BlueSkyRM"
                   checked        = "false">
           <Text string = "BlueSkyRM" />
         </RadioButton>

         <RadioButton callbackString = "ExplosionRM"
                   checked        = "true">
           <Text string = "ExplosionRM" />
         </RadioButton>

         <RadioButton callbackString = "InfernoRM"
                   checked        = "false">
           <Text string = "InfernoRM" />
         </RadioButton>

         <RadioButton callbackString = "OceanRM"
                   checked        = "false">
           <Text string = "OceanRM" />
         </RadioButton>

         <RadioButton callbackString = "DarkSkyRM"
                   checked        = "false">
           <Text string = "DarkSkyRM" />
         </RadioButton>

         <RadioButton callbackString = "FireBallRM"
                   checked        = "false">
           <Text string = "FireBallRM" />
         </RadioButton>

         <RadioButton callbackString = "LavaRM"
                   checked        = "false">
           <Text string = "LavaRM" />
         </RadioButton>
         <RadioButton callbackString = "vnoise"
                   checked        = "false">
           <Text string = "vnoise" />
         </RadioButton>

      </Panel>

      <Panel name           = "Texture"
             layout         = "YAXIS">

         <RadioButton callbackString = "explosion"
                   checked        = "true">
           <Text string = "explosion" />
         </RadioButton>

         <RadioButton callbackString = "fireBase"
                   checked        = "false">
           <Text string = "fireBase" />
         </RadioButton>

         <RadioButton callbackString = "FireTransferFunction"
                   checked        = "false">
           <Text string = "FireTransferFunction" />
         </RadioButton>

         <RadioButton callbackString = "FirePalette"
                   checked        = "false">
           <Text string = "FirePalette" />
         </RadioButton>

         <RadioButton callbackString = "fire_gradient3"
                   checked        = "false">
           <Text string = "fire_gradient3" />
         </RadioButton>

         <RadioButton callbackString = "FireGrade"
                   checked        = "false">
           <Text string = "FireGrade" />
         </RadioButton>

         <RadioButton callbackString = "Spectrum"
                   checked        = "false">
           <Text string = "Spectrum" />
         </RadioButton>

      </Panel>
  
    </TabbedPanel>
  </Panel>
</Panel>
