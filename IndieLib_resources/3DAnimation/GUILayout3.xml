<Panel visible     = "false"
       name        = "Main Frame">
  
  <Font path = "/NSGUI/ArialSmall.tga" />
  
  <Panel name        = "User Controls"
         layout      = "YAXIS"
         anchorPoint = "CORNERRU"> 
         
    <Position    x = "-10" y = "10"/>
    <Interval    y = "2" x = "2" />

    <TabbedPanel callbackString = "tp">
      <TabButtonsBordersColor  x = "50" g = "50" b = "50" />
      <TabButtonsColor         x = "255" g = "180" b = "40" />
      <BordersColor            x = "216" y = "169" z =  "0" />
      <BGColor                 x =  "50" y =  "50" z = "50" />

      <Panel name           = "Render"
             layout         = "YAXIS">
         <RadioButton callbackString = "triangle"
                   checked        = "true">
           <Text string = "triangle" />
         </RadioButton>
         <RadioButton callbackString = "turtle"
                   checked        = "false">
           <Text string = "turtle" />
         </RadioButton>
         <RadioButton callbackString = "TexturedCube"
                   checked        = "false">
           <Text string = "TexturedCube" />
         </RadioButton>
         <RadioButton callbackString = "ColoredCube"
                   checked        = "false">
           <Text string = "ColoredCube" />
         </RadioButton>
         <RadioButton callbackString = "demon"
                   checked        = "false">
           <Text string = "demon" />
         </RadioButton>
         <RadioButton callbackString = "ProceduralBuilding"
                   checked        = "false">
           <Text string = "ProceduralBuilding" />
         </RadioButton>
     </Panel>

      <!-- Panel name           = "Lightning"
             layout         = "YAXIS">
         <RadioButton callbackString = "SimpleShader"
                   checked        = "true">
           <Text string = "SimpleShader" />
         </RadioButton>
	<RadioButton callbackString = "AmbientLighting"
                   checked        = "false">
           <Text string = "AmbientLighting" />
         </RadioButton>
      </Panel -->
    </TabbedPanel>
  </Panel>
</Panel>
