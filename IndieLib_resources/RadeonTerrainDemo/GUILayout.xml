<Panel visible     = "false"
       name        = "Main Frame">
  
  <Font path = "/NSGUI/ArialSmall.tga" />
  
  <Panel name        = "User Controls"
         layout      = "YAXIS"
         anchorPoint = "CORNERRU"> 
         
    <Position    x = "-10" y = "10"/>
    <Interval    y = "2" x = "2" />

    <TabbedPanel callbackString = "tp">
      <TabButtonsBordersColor  x = "50" g = "50" b = "50" />
      <TabButtonsColor         x = "255" g = "180" b = "40" />
      <BordersColor            x = "216" y = "169" z =  "0" />
      <BGColor                 x =  "50" y =  "50" z = "50" />

      <Panel name           = "Render"
             layout         = "YAXIS">  

         <CheckBox callbackString = "Terrain"
                   checked        = "true">
           <Text string = "Render Terrain" />
         </CheckBox>
         
         <CheckBox callbackString = "Sky"
                   checked        = "true">
           <Text string = "Render Sky" />
         </CheckBox>

         <CheckBox callbackString = "WireFrame"
                   checked        = "false">
           <Text string = "Render WireFrame" />
         </CheckBox>
      </Panel>
  
    </TabbedPanel>
  </Panel>
</Panel>
